<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="800.0" prefWidth="250.0" styleClass="left-pane"
      xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="g6.gcm.client.boundary.startup.JustBrowseSidePaneUIController"
      fx:id="costumerSidePaneVB">
    <children>
        <BorderPane VBox.vgrow="NEVER" prefHeight="100.0">
            <center>
                <ImageView BorderPane.alignment="CENTER" fitHeight="117.0" fitWidth="250.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png"/>
                    </image>
                </ImageView>
            </center>
        </BorderPane>
        <Region VBox.vgrow="NEVER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                prefHeight="50.0" prefWidth="200.0"/>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" layoutX="10.0" layoutY="240.0"
              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" fx:id="signInHB">
            <children>
                <JFXButton HBox.hgrow="ALWAYS" maxHeight="-Infinity" maxWidth="150.0" ripplerFill="WHITE"
                           text="Ok I'm ready to sign in now" textAlignment="CENTER" wrapText="true"
                           fx:id="signInBTN"/>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" maxHeight="1.7976931348623157E308"
              maxWidth="1.7976931348623157E308" fx:id="signUpHB">
            <children>
                <JFXButton HBox.hgrow="ALWAYS" alignment="CENTER" maxWidth="200.0" ripplerFill="WHITE"
                           text="You convinced me! Sign me up :)" textAlignment="CENTER" wrapText="true"
                           fx:id="signUpBTN">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </JFXButton>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <Region VBox.vgrow="ALWAYS" maxHeight="1.7976931348623157E308" maxWidth="230.0"/>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" layoutX="10.0" layoutY="465.0" maxHeight="40.0"
              maxWidth="230.0" styleClass="menu-option">
            <children>
                <JFXButton HBox.hgrow="ALWAYS" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" ripplerFill="WHITE" text="Help" textAlignment="CENTER"
                           fx:id="helpBTN"/>
            </children>
        </HBox>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" layoutX="10.0" layoutY="490.0" maxHeight="40.0"
              maxWidth="230.0" styleClass="menu-option">
            <children>
                <JFXButton HBox.hgrow="ALWAYS" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" ripplerFill="WHITE" text="Contact us"
                           textAlignment="CENTER" fx:id="contactUsBTN"/>
            </children>
        </HBox>
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" layoutX="10.0" layoutY="410.0" maxHeight="80.0"
              maxWidth="230.0" styleClass="menu-option">
            <children>
                <JFXButton HBox.hgrow="ALWAYS" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" ripplerFill="WHITE" text="Donate to ORT-Braude"
                           textAlignment="CENTER" wrapText="true" fx:id="donateBTN"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="30.0"/>
    </padding>
    <stylesheets>
        <URL value="@../css/SidePane.css"/>
        <URL value="@../css/BackGrounds-StyleSheet.css"/>
        <URL value="@../css/Buttons-StyleSheet.css"/>
        <URL value="@../css/Labels-StyleSheet.css"/>
    </stylesheets>
</VBox>
